# Environment Configuration for NestJS Application
# Copy this file to .env and fill in your actual values

# Application Environment
# Set to 'production' for production, 'development' for dev, etc.
NODE_ENV=production

# Database Configuration
# Database type (e.g., postgres, mysql, sqlite)
DB_TYPE=postgres

# Database host (e.g., localhost, your-db-host.com)
DB_HOST=localhost

# Database port (default for PostgreSQL is 5432)
DB_PORT=5432

# Database username
DB_USERNAME=your_db_username

# Database password
DB_PASSWORD=your_db_password

# Database name
DB_NAME=your_db_name

# Database synchronization (set to 'true' only in development; 'false' in production)
DB_SYNC=false

# Auto-load entities (set to 'true' to auto-load, 'false' otherwise)
AUTO_LOAD=false